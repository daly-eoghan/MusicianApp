<?xml version = "1.0" encoding = "UTF-8"?>
<!--Used to add a frame to each of the rows in the recyclerview-->
<layer-list xmlns:android = "http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape = "rectangle">
<!--        Create a rectangle of gray-->
            <stroke android:color = "#444444" android:width = "1dp" />
            <solid android:color = "#444444" />
        </shape>
    </item>
    <item android:bottom = "5dp">
        <shape android:shape = "rectangle">
<!--        Create a rectangle of black over the rectangle of gray to only show the bottom.-->
            <stroke android:color = "@color/background_color" android:width = "1dp" />
            <solid android:color = "@color/background_color" />
        </shape>
    </item>

</layer-list>