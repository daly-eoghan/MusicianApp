<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/background_color"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textColorHighlight="#FF5722"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/BandTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/background_color"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textColorHighlight="#FF5722"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/MusicianImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:background="@color/background_color"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/RoleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/background_color"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textColorHighlight="#FF5722"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:background="@color/background_color">

        <Button
            android:id="@+id/Act3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="55dp"
            android:layout_marginVertical="25dp"
            android:layout_weight="0"
            android:onClick="launchThirdActivity"
            android:text="More Info"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Act4Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="25dp"
            android:gravity="center_vertical"
            android:onClick="launchFourthActivity"
            android:text="Web Info"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>